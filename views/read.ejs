<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900">
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a href="/" class="text-blue-500">Back to home</a>
        <h1 class="text-3xl tracking-tighter mb-3 mt-10">Available pg</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if (users.length>0){%>
                <% users.forEach(function(user){ %>
                    <div class="user w-full p-4 bg-zinc-800 rounded-lg">
                        <div class="flex gap-20">
                            <div class="w-full h-52 rounded-lg bg-zinc-500">
                                <img class="w-full h-full object-cover" src="<%= user.common %>" alt=""></div>
                            <div class="w-full h-52 rounded-lg bg-zinc-500">
                                <img class="w-full h-full object-cover" src="<%= user.rooms %>" alt=""></div>
                        </div>        
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.email %></h3>
                        <h5 class="text-zinc-500"><%= user.locality %></h5>
                        <h5 class="text-zinc-500"><%= user.other %></h5>
                        <h5 class="text-zinc-500"><%= user.fees %></h5>
                        <h5 class="text-zinc-500"><%= user.contact %></h5>
                        <div class="flex gap-3 mt-10">
                            <a class="text-red-200" href="/login/<%= user._id %>">Edit Info</a>
                        </div>
                    </div>
                <% }) %>
                <% }else{  %>
                    <div>
                        No available pg
                    </div>
            <% } %>
            
        </div>
    </div>
</body>
</html>